{
  "compilerOptions": {
    /* 1. SETUP MODERN (Fix Error Lu) */
    "target": "es2022",
    "module": "Node16",                  /* <--- UBAH INI JADI Node16 */
    "moduleResolution": "Node16",        /* <--- INI JUGA Node16 */
    
    /* 2. FOLDER */
    "rootDir": "./src",
    "outDir": "./dist",

    /* 3. INTEROP & SAFETY */
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 4. SETTINGAN LAIN */
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}